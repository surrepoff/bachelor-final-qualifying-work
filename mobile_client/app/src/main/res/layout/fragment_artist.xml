<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.artist.ArtistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/fragmentArtist_closeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:contentDescription="Close Button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragmentArtist_headerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Артист"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/fragmentArtist_closeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragmentArtist_closeButton"
            app:layout_constraintTop_toTopOf="@id/fragmentArtist_closeButton" />

        <ImageView
            android:id="@+id/fragmentArtist_artistImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Image"
            android:src="@drawable/default_artist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentArtist_closeButton" />

        <TextView
            android:id="@+id/fragmentArtist_artistName"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:text="Имя артиста"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragmentArtist_artistImage"
            app:layout_constraintTop_toTopOf="@id/fragmentArtist_artistImage" />

        <ImageButton
            android:id="@+id/fragmentArtist_dislikeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="Dislike Button"
            android:src="@drawable/ic_thumb_down_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentArtist_artistName" />

        <ImageButton
            android:id="@+id/fragmentArtist_likeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="Like Button"
            android:src="@drawable/ic_thumb_up_outline"
            app:layout_constraintBottom_toBottomOf="@id/fragmentArtist_dislikeButton"
            app:layout_constraintEnd_toStartOf="@id/fragmentArtist_dislikeButton"
            app:layout_constraintTop_toTopOf="@id/fragmentArtist_dislikeButton" />

        <ImageButton
            android:id="@+id/fragmentArtist_addButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="Add/Remove Button"
            android:src="@drawable/ic_plus"
            app:layout_constraintBottom_toBottomOf="@id/fragmentArtist_dislikeButton"
            app:layout_constraintEnd_toStartOf="@id/fragmentArtist_likeButton"
            app:layout_constraintTop_toTopOf="@id/fragmentArtist_dislikeButton" />

        <TextView
            android:id="@+id/fragmentArtist_trackName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Треки"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentArtist_dislikeButton" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragmentAlbum_trackRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentArtist_trackName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>