<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.musicPlayer.ShortMusicPlayerFragment">

    <SeekBar
        android:id="@+id/fragmentShortMusicPlayer_progressBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragmentShortMusicPlayer_trackImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Track Image"
        android:src="@drawable/default_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentShortMusicPlayer_progressBar" />

    <TextView
        android:id="@+id/fragmentShortMusicPlayer_trackName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:text="Название трека"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/fragmentShortMusicPlayer_artistName"
        app:layout_constraintEnd_toStartOf="@id/fragmentShortMusicPlayer_stopButton"
        app:layout_constraintStart_toEndOf="@id/fragmentShortMusicPlayer_trackImage"
        app:layout_constraintTop_toTopOf="@id/fragmentShortMusicPlayer_trackImage" />

    <TextView
        android:id="@+id/fragmentShortMusicPlayer_artistName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Имя артиста"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragmentShortMusicPlayer_stopButton"
        app:layout_constraintStart_toStartOf="@id/fragmentShortMusicPlayer_trackName"
        app:layout_constraintTop_toBottomOf="@id/fragmentShortMusicPlayer_trackName" />

    <ImageButton
        android:id="@+id/fragmentShortMusicPlayer_stopButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:contentDescription="Stop Button"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentShortMusicPlayer_progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>