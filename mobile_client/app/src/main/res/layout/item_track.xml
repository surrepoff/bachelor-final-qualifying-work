<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/itemTrack_trackImageImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:contentDescription="Track Image"
        android:src="@drawable/default_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/itemTrack_playButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:contentDescription="Play/Pause Button"
        android:src="@drawable/ic_play"
        app:layout_constraintStart_toStartOf="@id/itemTrack_trackImageImageView"
        app:layout_constraintTop_toTopOf="@id/itemTrack_trackImageImageView" />

    <TextView
        android:id="@+id/itemTrack_trackNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Track Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/itemTrack_trackImageImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTrack_ArtistNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Artist Name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/itemTrack_trackImageImageView"
        app:layout_constraintTop_toBottomOf="@+id/itemTrack_trackNameTextView" />

    <TextView
        android:id="@+id/itemTrack_TrackDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Track Duration"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/itemTrack_trackImageImageView"
        app:layout_constraintTop_toBottomOf="@+id/itemTrack_ArtistNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>