<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemTrack_TrackImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Track Image"
        android:src="@drawable/default_album"/>

    <ImageButton
        android:id="@+id/itemTrack_Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/itemTrack_TrackImage"
        app:layout_constraintTop_toTopOf="@id/itemTrack_TrackImage"
        android:src="@drawable/ic_play"
        android:contentDescription="Play/Pause Button"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/itemTrack_TrackName"
        android:text="Track Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemTrack_TrackImage"
        />

    <TextView
        android:id="@+id/itemTrack_ArtistName"
        android:text="Artist Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/itemTrack_TrackName"
        app:layout_constraintStart_toEndOf="@id/itemTrack_TrackImage"
        />

    <TextView
        android:id="@+id/itemTrack_TrackDuration"
        android:text="Track Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/itemTrack_ArtistName"
        app:layout_constraintStart_toEndOf="@id/itemTrack_TrackImage"
        />

</androidx.constraintlayout.widget.ConstraintLayout>