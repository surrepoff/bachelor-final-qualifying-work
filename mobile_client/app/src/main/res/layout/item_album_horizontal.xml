<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemAlbumHorizontal_albumImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Image"
        android:src="@drawable/default_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemAlbumHorizontal_albumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Название альбома"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/itemAlbumHorizontal_albumImage"
        app:layout_constraintStart_toStartOf="@id/itemAlbumHorizontal_albumImage"
        app:layout_constraintTop_toBottomOf="@id/itemAlbumHorizontal_albumImage" />

    <TextView
        android:id="@+id/itemAlbumHorizontal_artistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Имя артиста"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/itemAlbumHorizontal_albumImage"
        app:layout_constraintStart_toStartOf="@id/itemAlbumHorizontal_albumImage"
        app:layout_constraintTop_toBottomOf="@id/itemAlbumHorizontal_albumName" />

</androidx.constraintlayout.widget.ConstraintLayout>