<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemTrackAdd_trackImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Track Image"
        android:src="@drawable/default_album"
        app:layout_constraintBottom_toBottomOf="@id/itemTrackAdd_trackDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemTrackAdd_trackName" />

    <TextView
        android:id="@+id/itemTrackAdd_trackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Название трека"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/itemTrackAdd_addButton"
        app:layout_constraintStart_toEndOf="@id/itemTrackAdd_trackImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTrackAdd_artistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Имя артиста"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/itemTrackAdd_addButton"
        app:layout_constraintStart_toEndOf="@id/itemTrackAdd_trackImage"
        app:layout_constraintTop_toBottomOf="@+id/itemTrackAdd_trackName" />

    <TextView
        android:id="@+id/itemTrackAdd_trackDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="Длина трека"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/itemTrackAdd_addButton"
        app:layout_constraintStart_toEndOf="@id/itemTrackAdd_trackImage"
        app:layout_constraintTop_toBottomOf="@id/itemTrackAdd_artistName" />

    <ImageButton
        android:id="@+id/itemTrackAdd_addButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="Add Button"
        android:scaleType="centerInside"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@id/itemTrackAdd_trackImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemTrackAdd_trackImage" />

</androidx.constraintlayout.widget.ConstraintLayout>